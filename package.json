{

  "author": "Pablo Martinez",
  "license": "MIT",
  "name": "toju-react-hooks",
  "version": "1.0.4",
  "type": "module",
  "main": "dist/toju-react-hooks.umd.cjs",
  "module": "dist/toju-react-hooks.js",
  "types": "dist/index.d.ts",
  "exports": {
    "." : {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/toju-react-hooks.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/toju-react-hooks.umd.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/toju-development/toju-react-hooks"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "check:types": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "toju-basic-utils": "^1.0.3"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.6",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/coverage-v8": "^1.6.0",
    "axios-mock-adapter": "^1.22.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "husky": "^8.0.0",
    "jsdom": "^24.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.3.1",
    "vite-plugin-dts": "^3.9.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "hooks",
    "HOC",
    "isInViewport",
    "useThrottle"
  ]
}
